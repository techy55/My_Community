<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFCDD2"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="80dp"
    tools:context=".assoc.PostAnnounceActivity"
    android:paddingEnd="16dp">

    <Button
        android:id="@+id/post_announce_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:drawableTop="@drawable/announcement64"
        android:text="Post Announcement"
        android:textColor="#ce3232"
        android:textSize="18sp"
        android:typeface="serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/announce_title"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:hint="Enter Title"
        android:fitsSystemWindows="true"
        android:breakStrategy="balanced"
        android:singleLine="false"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/announce_text"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:hint="Please Write your Announcement here"
        android:fitsSystemWindows="true"
        android:breakStrategy="balanced"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:id="@+id/post_announce"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Post"
        android:textColor="#fff" />
</LinearLayout>